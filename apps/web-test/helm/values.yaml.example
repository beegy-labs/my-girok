# My-Girok Web Test Application Helm Values Example
#
# USAGE:
#   1. Copy this file: cp values.yaml.example values.yaml
#   2. Edit values.yaml with your settings
#   3. Install: helm install my-girok-web-test . -f values.yaml
#
# IMPORTANT:
#   - values.yaml is gitignored - never commit your actual configuration
#   - Customize for your environment (development, staging, production)
#   - This is a test web application for the authentication system

# Number of replicas
# Development: 1, Staging: 2, Production: 2-3
replicaCount: 2

image:
  repository: your-registry.io/my-girok/web-test
  pullPolicy: IfNotPresent
  # Overrides the image tag whose default is the chart appVersion
  # Development: "dev", Staging: "staging", Production: "latest" or version tag
  tag: ""

imagePullSecrets: []
nameOverride: ""
fullnameOverride: ""

serviceAccount:
  create: true
  annotations: {}
  name: ""

podAnnotations: {}

podSecurityContext:
  fsGroup: 1000
  runAsNonRoot: true
  runAsUser: 1000

securityContext:
  allowPrivilegeEscalation: false
  capabilities:
    drop:
    - ALL
  readOnlyRootFilesystem: false  # Nginx needs write access to /var/cache, /var/log

service:
  type: ClusterIP
  port: 80
  targetPort: 3000

ingress:
  enabled: true
  className: "nginx"
  annotations:
    cert-manager.io/cluster-issuer: "letsencrypt-prod"
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
    # Rate limiting for static content
    nginx.ingress.kubernetes.io/limit-rps: "200"
  hosts:
    # CHANGE THIS: Update with your domain
    - host: app.example.com
      paths:
        - path: /
          pathType: Prefix
  tls:
    - secretName: web-test-tls
      hosts:
        - app.example.com

# Resource limits
# Web apps typically need less resources than backend services
# Development: Lower limits, Staging: Medium, Production: Higher
resources:
  limits:
    cpu: 500m
    memory: 256Mi
  requests:
    cpu: 100m
    memory: 128Mi

# Auto-scaling
# Development: Disable, Staging/Production: Enable
autoscaling:
  enabled: true
  minReplicas: 2
  maxReplicas: 5
  targetCPUUtilizationPercentage: 70
  targetMemoryUtilizationPercentage: 80

nodeSelector: {}

tolerations: []

affinity:
  podAntiAffinity:
    preferredDuringSchedulingIgnoredDuringExecution:
      - weight: 100
        podAffinityTerm:
          labelSelector:
            matchExpressions:
              - key: app.kubernetes.io/name
                operator: In
                values:
                  - web-test
          topologyKey: kubernetes.io/hostname

# ============================================================================
# Application Configuration
# ============================================================================

app:
  # API URL for auth service
  # CHANGE THIS: Point to your auth-service
  # This is injected as VITE_API_URL during build time
  apiUrl: "https://auth-api.example.com/api/v1"

# Health checks
livenessProbe:
  httpGet:
    path: /health
    port: http
  initialDelaySeconds: 10
  periodSeconds: 10
  timeoutSeconds: 3
  failureThreshold: 3

readinessProbe:
  httpGet:
    path: /health
    port: http
  initialDelaySeconds: 5
  periodSeconds: 5
  timeoutSeconds: 3
  failureThreshold: 3

# ============================================================================
# ENVIRONMENT-SPECIFIC CONFIGURATIONS
# ============================================================================
