# My-Girok Personal Service Helm Values Example
#
# USAGE:
#   1. Copy this file: cp values.yaml.example values.yaml
#   2. Edit values.yaml with your settings
#   3. Install: helm install my-girok-personal . -f values.yaml
#
# IMPORTANT:
#   - values.yaml is gitignored - never commit your actual configuration
#   - Customize for your environment (development, staging, production)
#   - Use Sealed Secrets for sensitive data in production

# Number of replicas
# Development: 1, Staging: 2, Production: 3+
replicaCount: 2

image:
  repository: your-registry.io/my-girok/personal-service
  pullPolicy: IfNotPresent
  # Overrides the image tag whose default is the chart appVersion
  # Development: "dev", Staging: "staging", Production: "latest" or version tag
  tag: ""

imagePullSecrets: []
nameOverride: ""
fullnameOverride: ""

serviceAccount:
  create: true
  annotations: {}
  name: ""

podAnnotations: {}

podSecurityContext:
  fsGroup: 1000
  runAsNonRoot: true
  runAsUser: 1000

securityContext:
  allowPrivilegeEscalation: false
  capabilities:
    drop:
    - ALL
  readOnlyRootFilesystem: true

service:
  type: ClusterIP
  port: 4002
  targetPort: 4002

ingress:
  enabled: true
  className: "nginx"
  annotations:
    cert-manager.io/cluster-issuer: "letsencrypt-prod"
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
    # Rate limiting
    nginx.ingress.kubernetes.io/limit-rps: "100"
  hosts:
    # CHANGE THIS: Update with your domain
    - host: personal-api.example.com
      paths:
        - path: /
          pathType: Prefix
  tls:
    - secretName: personal-api-tls
      hosts:
        - personal-api.example.com

# Resource limits
# Development: Lower limits, Staging: Medium, Production: Higher
resources:
  limits:
    cpu: 1000m
    memory: 512Mi
  requests:
    cpu: 250m
    memory: 256Mi

# Auto-scaling
# Development: Disable, Staging/Production: Enable
autoscaling:
  enabled: true
  minReplicas: 2
  maxReplicas: 10
  targetCPUUtilizationPercentage: 70
  targetMemoryUtilizationPercentage: 80

nodeSelector: {}

tolerations: []

affinity:
  podAntiAffinity:
    preferredDuringSchedulingIgnoredDuringExecution:
      - weight: 100
        podAffinityTerm:
          labelSelector:
            matchExpressions:
              - key: app.kubernetes.io/name
                operator: In
                values:
                  - personal-service
          topologyKey: kubernetes.io/hostname

# ============================================================================
# Application Configuration
# ============================================================================

app:
  # Environment: development, staging, production
  nodeEnv: production
  port: 4002

  # Database Configuration
  # CHANGE THESE VALUES
  database:
    host: your-database-host.example.com
    port: 5432
    name: your_database_name
    username: your_database_user
    # Password should be in Sealed Secret

  # JWT Configuration (for validation)
  jwt:
    accessExpiration: "15m"
    refreshExpiration: "7d"

  # Auth Service URL (for user validation)
  # CHANGE THIS
  authServiceUrl: "http://auth-service:3001"

  # Frontend URL (for share links)
  # CHANGE THIS
  frontendUrl: "https://example.com"

# ============================================================================
# MinIO Configuration
# ============================================================================
minio:
  # Name of the Kubernetes secret containing MinIO credentials
  secretName: "personal-service-minio-credentials"
  # Use SSL for MinIO connection (true for HTTPS endpoints)
  useSSL: "true"

# ============================================================================
# Sealed Secrets Configuration
# ============================================================================
# Use kubeseal to encrypt secrets before committing
# See: https://github.com/bitnami-labs/sealed-secrets
#
# Example:
#   kubectl create secret generic my-girok-personal-service-secret \
#     --from-literal=database-url="postgresql://user:pass@host:5432/db" \
#     --from-literal=jwt-secret="your-jwt-secret" \
#     --dry-run=client -o yaml | \
#   kubeseal --format yaml > sealed-secret.yaml

sealedSecrets:
  enabled: true
  annotations:
    sealedsecrets.bitnami.com/managed: "true"

# Health checks
livenessProbe:
  httpGet:
    path: /health
    port: http
  initialDelaySeconds: 30
  periodSeconds: 10
  timeoutSeconds: 5
  failureThreshold: 3

readinessProbe:
  httpGet:
    path: /health
    port: http
  initialDelaySeconds: 10
  periodSeconds: 5
  timeoutSeconds: 3
  failureThreshold: 3

# ============================================================================
# ENVIRONMENT-SPECIFIC CONFIGURATIONS
# ============================================================================
#
# DEVELOPMENT:
#   replicaCount: 1
#   image.tag: "dev"
#   autoscaling.enabled: false
#   app.nodeEnv: development
#   app.database.name: girok_personal_dev
#   resources.limits.cpu: 500m
#   resources.limits.memory: 256Mi
#   ingress.hosts[0].host: personal-api-dev.example.com
#
# STAGING:
#   replicaCount: 2
#   image.tag: "staging"
#   autoscaling.enabled: true
#   autoscaling.minReplicas: 2
#   autoscaling.maxReplicas: 5
#   app.nodeEnv: staging
#   resources.limits.cpu: 750m
#   resources.limits.memory: 384Mi
#   ingress.hosts[0].host: personal-api-staging.example.com
#
# PRODUCTION:
#   replicaCount: 3
#   image.tag: "latest" or "v1.0.0"
#   autoscaling.enabled: true
#   autoscaling.minReplicas: 3
#   autoscaling.maxReplicas: 10
#   app.nodeEnv: production
#   resources.limits.cpu: 1000m
#   resources.limits.memory: 512Mi
#   ingress.hosts[0].host: personal-api.example.com
#   affinity.podAntiAffinity: requiredDuringSchedulingIgnoredDuringExecution
#
# ============================================================================
# DEPLOYMENT TIPS
# ============================================================================
#
# 1. Create separate values files for each environment:
#    - values-dev.yaml (for your local development)
#    - values-staging.yaml (for staging environment)
#    - values-prod.yaml (for production environment)
#
# 2. Install with specific values:
#    helm install my-girok-personal . -f values.yaml -f values-prod.yaml
#
# 3. Use Sealed Secrets for production:
#    - Never commit plain secrets
#    - Always use kubeseal to encrypt
#    - Store sealed secrets in git
#
# 4. For production, consider:
#    - Using external managed database (RDS, Cloud SQL)
#    - Enabling monitoring (Prometheus)
#    - Setting up log aggregation
#    - Configuring backup strategies
#
# ============================================================================
