// Prisma schema for auth-service
generator client {
  provider        = "prisma-client-js"
  output          = "../node_modules/.prisma/auth-client"
  previewFeatures = ["typedSql", "relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id            String         @id @default(uuid())
  externalId    String         @unique @map("external_id") // 10-char time-based ID for external partners (e.g., advertisers)
  email         String         @unique
  username      String         @unique  // Unique username for public profile URLs (/:username)
  password      String?        // null for OAuth users
  name          String?
  avatar        String?
  role          Role           @default(USER)
  provider      AuthProvider   @default(LOCAL)
  providerId    String?        @map("provider_id") // OAuth provider user ID
  emailVerified Boolean        @default(false) @map("email_verified")
  region        String?        // Registration region (KR, JP, EU, US, etc.) for consent policy
  locale        String?        // User's preferred locale (ko, en, ja, etc.)
  timezone      String?        // User's timezone (Asia/Seoul, Europe/London, etc.)
  createdAt     DateTime       @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime       @updatedAt @map("updated_at") @db.Timestamptz(6)

  sessions      Session[]
  domainAccess  DomainAccessToken[]
  consents      UserConsent[]

  @@index([externalId])
  @@index([email])
  @@index([username])
  @@index([provider, providerId])
  @@map("users")
}

// Session model for refresh token management
model Session {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  refreshToken String   @unique @map("refresh_token")
  expiresAt    DateTime @map("expires_at") @db.Timestamptz(6)
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  @@index([userId])
  @@index([refreshToken])
  @@map("sessions")
}

// Domain access token for time-limited sharing
model DomainAccessToken {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  domain    String   // e.g., 'resume', 'portfolio'
  token     String   @unique
  expiresAt DateTime @map("expires_at") @db.Timestamptz(6)
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  @@index([userId])
  @@index([domain])
  @@index([token])
  @@map("domain_access_tokens")
}

// OAuth provider configuration (enable/disable providers)
model OAuthProviderConfig {
  id           String       @id @default(uuid())
  provider     AuthProvider @unique
  enabled      Boolean      @default(true)
  displayName  String       @map("display_name") // Korean/English name
  description  String?      // Additional info
  clientId     String?      @map("client_id") // OAuth client ID
  clientSecret String?      @map("client_secret") // OAuth client secret (encrypted)
  callbackUrl  String?      @map("callback_url") // OAuth callback URL
  updatedAt    DateTime     @updatedAt @map("updated_at") @db.Timestamptz(6)
  updatedBy    String?      @map("updated_by") // User ID who made the change

  @@map("oauth_provider_configs")
}

// Legal document versions (Privacy Policy, Terms of Service, etc.)
model LegalDocument {
  id            String           @id @default(uuid())
  type          LegalDocumentType
  version       String           // Semantic version: "1.0.0", "1.1.0"
  locale        String           @default("ko") // ko, en, ja
  title         String           // Document title
  content       String           @db.Text // Full document content (markdown)
  summary       String?          @db.Text // Brief summary for consent UI
  effectiveDate DateTime         @map("effective_date") @db.Timestamptz(6)
  isActive      Boolean          @default(true) @map("is_active")
  createdAt     DateTime         @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime         @updatedAt @map("updated_at") @db.Timestamptz(6)

  consents      UserConsent[]

  @@unique([type, version, locale])
  @@index([type, locale, isActive])
  @@map("legal_documents")
}

// User consent records (GDPR/PIPA compliant audit trail)
model UserConsent {
  id              String           @id @default(uuid())
  userId          String           @map("user_id")
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  consentType     ConsentType      @map("consent_type")
  documentId      String?          @map("document_id")
  document        LegalDocument?   @relation(fields: [documentId], references: [id])
  documentVersion String?          @map("document_version") // Snapshot of version at consent time
  agreed          Boolean          @default(true)
  agreedAt        DateTime         @map("agreed_at") @db.Timestamptz(6)
  withdrawnAt     DateTime?        @map("withdrawn_at") @db.Timestamptz(6)
  ipAddress       String?          @map("ip_address") // For audit
  userAgent       String?          @map("user_agent") // For audit
  createdAt       DateTime         @default(now()) @map("created_at") @db.Timestamptz(6)

  @@unique([userId, consentType, documentVersion])
  @@index([userId])
  @@index([consentType])
  @@index([agreedAt])
  @@map("user_consents")
}

// Enums
enum Role {
  GUEST
  USER
  MANAGER
  MASTER
}

enum AuthProvider {
  LOCAL
  GOOGLE
  KAKAO
  NAVER
  APPLE
}

// Legal document types
enum LegalDocumentType {
  TERMS_OF_SERVICE      // 이용약관
  PRIVACY_POLICY        // 개인정보처리방침
  MARKETING_POLICY      // 마케팅 정보 수신 동의
  PERSONALIZED_ADS      // 맞춤형 광고 동의
}

// Consent types (what users can agree to)
enum ConsentType {
  TERMS_OF_SERVICE      // [Required] 이용약관 동의
  PRIVACY_POLICY        // [Required] 개인정보 수집·이용 동의
  MARKETING_EMAIL       // [Optional] 마케팅 이메일 수신 동의
  MARKETING_PUSH        // [Optional] 마케팅 푸시 알림 동의
  MARKETING_PUSH_NIGHT  // [Optional] 야간 푸시 알림 동의 (21:00-08:00)
  MARKETING_SMS         // [Optional] 마케팅 SMS 수신 동의
  PERSONALIZED_ADS      // [Optional] 맞춤형 광고 동의
  THIRD_PARTY_SHARING   // [Optional] 제3자 정보 제공 동의
}
