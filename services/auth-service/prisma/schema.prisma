// Prisma schema for auth-service
generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/auth-client"
  previewFeatures = ["typedSql", "relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id            String         @id @default(uuid())
  externalId    String         @unique @map("external_id") // 10-char time-based ID for external partners (e.g., advertisers)
  email         String         @unique
  username      String         @unique  // Unique username for public profile URLs (/:username)
  password      String?        // null for OAuth users
  name          String?
  avatar        String?
  role          Role           @default(USER)
  provider      AuthProvider   @default(LOCAL)
  providerId    String?        @map("provider_id") // OAuth provider user ID
  emailVerified Boolean        @default(false) @map("email_verified")
  createdAt     DateTime       @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime       @updatedAt @map("updated_at") @db.Timestamptz(6)

  sessions      Session[]
  domainAccess  DomainAccessToken[]

  @@index([externalId])
  @@index([email])
  @@index([username])
  @@index([provider, providerId])
  @@map("users")
}

// Session model for refresh token management
model Session {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  refreshToken String   @unique @map("refresh_token")
  expiresAt    DateTime @map("expires_at") @db.Timestamptz(6)
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  @@index([userId])
  @@index([refreshToken])
  @@map("sessions")
}

// Domain access token for time-limited sharing
model DomainAccessToken {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  domain    String   // e.g., 'resume', 'portfolio'
  token     String   @unique
  expiresAt DateTime @map("expires_at") @db.Timestamptz(6)
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  @@index([userId])
  @@index([domain])
  @@index([token])
  @@map("domain_access_tokens")
}

// OAuth provider configuration (enable/disable providers)
model OAuthProviderConfig {
  id           String       @id @default(uuid())
  provider     AuthProvider @unique
  enabled      Boolean      @default(true)
  displayName  String       @map("display_name") // Korean/English name
  description  String?      // Additional info
  clientId     String?      @map("client_id") // OAuth client ID
  clientSecret String?      @map("client_secret") // OAuth client secret (encrypted)
  callbackUrl  String?      @map("callback_url") // OAuth callback URL
  updatedAt    DateTime     @updatedAt @map("updated_at") @db.Timestamptz(6)
  updatedBy    String?      @map("updated_by") // User ID who made the change

  @@map("oauth_provider_configs")
}

// Enums
enum Role {
  GUEST
  USER
  MANAGER
  MASTER
}

enum AuthProvider {
  LOCAL
  GOOGLE
  KAKAO
  NAVER
  APPLE
}
