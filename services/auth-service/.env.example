# Server
NODE_ENV=development
PORT=3001

# Database
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL=postgresql://dev_girok_user:your-password@localhost:5432/dev_girok_user?schema=public

# JWT
JWT_SECRET=your-jwt-secret-min-32-chars-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_DOMAIN_ACCESS_EXPIRATION=72h

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4001/auth/google/callback

# Kakao OAuth
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_CALLBACK_URL=http://localhost:4001/auth/kakao/callback

# Naver OAuth
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
NAVER_CALLBACK_URL=http://localhost:4001/auth/naver/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Redis (optional)
REDIS_URL=redis://localhost:6379
