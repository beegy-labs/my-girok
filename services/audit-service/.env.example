# Audit Service Environment Variables

# Server
PORT=3003
NODE_ENV=development

# ClickHouse
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=audit_db
CLICKHOUSE_USERNAME=audit_user
CLICKHOUSE_PASSWORD=
CLICKHOUSE_ASYNC_INSERT=true
CLICKHOUSE_WAIT_FOR_ASYNC_INSERT=true

# PostgreSQL (for seed data / migrations)
DATABASE_URL=postgresql://user:password@localhost:5432/audit_db

# JWT (for token validation)
JWT_SECRET=your-jwt-secret-key

# Valkey Cache (Redis-compatible)
VALKEY_HOST=localhost
VALKEY_PORT=6379
VALKEY_PASSWORD=
VALKEY_DB=3

# MinIO (S3-compatible storage for exports)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key
MINIO_USE_SSL=false
MINIO_EXPORT_BUCKET=audit-exports

# Export S3 Configuration
EXPORT_S3_ENDPOINT=https://s3.girok.dev
EXPORT_S3_ACCESS_KEY=your-access-key
EXPORT_S3_SECRET_KEY=your-secret-key
EXPORT_S3_BUCKET=audit-exports
EXPORT_S3_REGION=auto

# OTEL (OpenTelemetry)
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel.girok.dev:4318
OTEL_SERVICE_NAME=audit-service
