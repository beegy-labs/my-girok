{
  "name": "@my-girok/ui-components",
  "version": "0.1.0",
  "description": "Shared UI components and hooks for my-girok frontend applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
