{
  "name": "@my-girok/ui-components",
  "version": "0.1.0",
  "description": "Shared UI components and hooks for my-girok frontend applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist storybook-static",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-storybook:versioned": "storybook build -o storybook-static/v$npm_package_version",
    "test:storybook": "vitest --project=storybook",
    "test:storybook:ui": "vitest --project=storybook --ui",
    "test:a11y": "vitest --project=storybook --grep='a11y'",
    "test:coverage": "vitest --project=storybook --coverage"
  },
  "peerDependencies": {
    "@my-girok/design-tokens": "workspace:*",
    "react": "catalog:",
    "react-dom": "catalog:",
    "sonner": "^1.7.2"
  },
  "devDependencies": {
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "storybook": "^10.1.10",
    "@storybook/react-vite": "^10.1.10",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-onboarding": "^10.1.10",
    "vitest": "^4.0.16",
    "playwright": "^1.57.0",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16"
  },
  "files": [
    "dist"
  ]
}
